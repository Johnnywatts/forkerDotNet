{
  "DemoConfiguration": {
    "DemoDataPath": "C:\\ForkerDemo",
    "UpdateIntervalMs": 500,
    "EnableFileSystemWatcher": true,
    "EnableSystemMetrics": true
  },
  "DashboardConfiguration": {
    "Port": 5000,
    "EnableCors": true,
    "SignalRHubPath": "/dashboardHub"
  },
  "FileDropperConfiguration": {
    "DefaultInterval": 30,
    "StressTestDelayMs": 100,
    "BatchSize": 3,
    "SupportedExtensions": [".svs", ".tiff", ".tif", ".ndpi", ".scn", ".vms"]
  },
  "MonitoringConfiguration": {
    "MaxLogEntries": 50,
    "MetricsUpdateIntervalMs": 1000,
    "FileCountUpdateIntervalMs": 500
  },
  "ToolsConfiguration": {
    "CorruptionTypes": [
      "ModifyContent",
      "TruncateFile",
      "SingleBitFlip",
      "HeaderCorruption"
    ],
    "ExternalAccessDurationSeconds": 30,
    "RaceConditionFileCount": 5
  },
  "ForkerServiceConfiguration": {
    "ServiceName": "ForkerDotNetDemo",
    "ServiceDisplayName": "ForkerDotNet Demo Service",
    "ExpectedConfigPath": "config\\demo-forker-config.json"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Console": {
      "Enabled": true
    },
    "File": {
      "Enabled": true,
      "Path": "logs/demo-.txt",
      "RollingInterval": "Day"
    }
  }
}