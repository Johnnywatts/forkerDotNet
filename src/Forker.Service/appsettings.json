{
  "ServiceName": "ForkerDotNet",
  "ServiceDisplayName": "ForkerDotNet File Copier Service",
  "ServiceDescription": "Production-grade file copier for medical imaging files with dual-target replication and SHA-256 verification",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\ProgramData\\ForkerDotNet\\Logs\\forker-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Database": {
    "ConnectionString": "Data Source=C:\\ProgramData\\ForkerDotNet\\forker.db",
    "EnableWalMode": true,
    "CommandTimeoutSeconds": 30,
    "CacheSize": 10000,
    "EnableForeignKeys": true
  },
  "Directories": {
    "Source": "C:\\ProgramData\\ForkerDotNet\\Input",
    "TargetA": "C:\\ProgramData\\ForkerDotNet\\DestinationA",
    "TargetB": "C:\\ProgramData\\ForkerDotNet\\DestinationB",
    "Error": "C:\\ProgramData\\ForkerDotNet\\Quarantine",
    "Processing": "C:\\ProgramData\\ForkerDotNet\\Processing"
  },
  "Monitoring": {
    "IncludeSubdirectories": false,
    "FileFilters": [
      "*.svs",
      "*.tiff",
      "*.tif",
      "*.ndpi",
      "*.scn"
    ],
    "ExcludeExtensions": [
      ".tmp",
      ".temp",
      ".part",
      ".lock"
    ],
    "MinimumFileAge": 5,
    "StabilityCheckInterval": 2,
    "MaxStabilityChecks": 10
  },
  "Target": {
    "Targets": {
      "TargetA": {
        "Id": "TargetA",
        "Path": "C:\\ProgramData\\ForkerDotNet\\DestinationA",
        "Enabled": true,
        "Description": "Destination A",
        "Priority": 1,
        "VerifyAfterCopy": true
      },
      "TargetB": {
        "Id": "TargetB",
        "Path": "C:\\ProgramData\\ForkerDotNet\\DestinationB",
        "Enabled": true,
        "Description": "Destination B",
        "Priority": 2,
        "VerifyAfterCopy": true
      }
    },
    "MaxConcurrentCopiesPerTarget": 2,
    "MaxRetryAttempts": 3,
    "RetryDelayMilliseconds": 5000,
    "CopyBufferSize": 1048576,
    "ParallelCopyEnabled": true,
    "TempDirectory": "C:\\ProgramData\\ForkerDotNet\\Processing"
  },
  "Testing": {
    "VerificationDelaySeconds": 0,
    "EnableTestMode": false,
    "VerboseTestLogging": false
  }
}
